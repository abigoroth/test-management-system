$(document).on("turbolinks:load", function(){
  var t = $("table[id^=dttb-]").DataTable({
    language: {
        searchPlaceholder: "Buat carian"
    },
    columnDefs: [ {
      "data": null,
      "searchable": true,
      "orderable": true,
      "targets": 0
    } ],
    order: [[ 1, 'asc' ]]
  });
  t.on( 'order.dt search.dt', function () {
        t.column(0, {search:'applied', order:'applied'}).nodes().each( function (cell, i) {
            cell.innerHTML = i+1;
        } );
    } ).draw();
})